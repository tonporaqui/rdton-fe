{
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"editor.quickSuggestions": {
		"strings": true
	},
	"css.customData": [".vscode/tailwind.json"],
	"scss.lint.unknownAtRules": "ignore",
	"tailwindCSS.experimental.configFile": "tailwind.config.ts",
	"tailwindCSS.experimental.classRegex": [
		["ui:\\s*{([^)]*)\\s*}", "[\"'`]([^\"'`]*).*?[\"'`]"],
		["/\\*ui\\*/\\s*{([^;]*)}", ":\\s*[\"'`]([^\"'`]*).*?[\"'`]"]
	],
	"json.schemaDownload.enable": true,
	"editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
	"editor.formatOnPaste": true, // required
	"editor.formatOnType": true, // required
	"editor.formatOnSave": true, // optional
	"editor.formatOnSaveMode": "file", // required to format on save
	"files.autoSave": "onFocusChange", // optional but recommended
	"vs-code-prettier-eslint.prettierLast": true,
	"spellright.language": ["es"],
	"spellright.documentTypes": ["markdown", "latex", "plaintext"] // set as "true" to run 'prettier' last not first
}
